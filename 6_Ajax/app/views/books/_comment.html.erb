<table>
  <% book_comments.each do |comment| %>
    <tr class="comment-list">
      <td class="comment-user">
        <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag(comment.user, :profile_image, size: "50x50", fallback: "no-image-mini.jpg") %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td class="comment">
        <%= comment.comment %>
      </td>
      <% if current_user == comment.user %>
        <td class="comment-destroy-button">
          <%= link_to "Destroy", book_book_comment_path(comment.book.id, comment.id), method: :delete, remote: true %>
        </td>
      <% end %>
    </tr>	
  <% end %>
</table>