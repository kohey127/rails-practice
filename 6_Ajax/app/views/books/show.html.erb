<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @new_book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr class="book_<%= @book.id %>">
				<%= render 'books/detail', book: @book %>
			</tr>
		</table>

		<div class="comment_<%= @book.id %>">
			<%= render partial: 'books/comment', locals: {book_comments: @book.book_comments} %>
		</div>
			<%= form_with model: [@book, @comment], data: {remote: true} do |f| %>
				<%= f.label :comment, "comment form", size: "90x5" %><br>
				<%= f.text_area :comment %><br>
				<%= f.submit "送信" %>
			<% end %>
	</div>
</div>